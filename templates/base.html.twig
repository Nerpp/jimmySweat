            <p><a href="{{ path('index') }}">Home </a>|<a href="{{ path('tricks_index') }}"> Tricks </a>|<a href="{{ path('app_login') }}"> Sign in </a>|<a href="{{ path('app_register') }}"> Sign Up</a></p>
        </div>
    </div>
</div>

<div class="container-fluid p-1">
    {% block body %}

    {% endblock %}
</div>



